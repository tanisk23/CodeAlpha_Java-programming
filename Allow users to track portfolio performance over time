import java.util.*;

class Stock {
    String name;
    double price;

    Stock(String name, double price) {
        this.name = name;
        this.price = price;
    }

    void updatePrice() {
        double change = (Math.random() - 0.5) * 10; // Simulates price fluctuation
        price = Math.max(1.0, Math.round((price + change) * 100.0) / 100.0);
    }
}

class PortfolioSnapshot {
    String time;
    double totalValue;

    PortfolioSnapshot(String time, double totalValue) {
        this.time = time;
        this.totalValue = totalValue;
    }
}

public class StockTradingWithTracking {
    static Map<String, Stock> market = new HashMap<>();
    static Map<String, Integer> portfolio = new HashMap<>();
    static List<PortfolioSnapshot> history = new ArrayList<>();
    static double balance = 10000.0;

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        initMarket();

        System.out.println("üìà Welcome to Java Stock Trading with Tracking!");
        System.out.println("Commands: market, buy, sell, portfolio, balance, history, exit");

        while (true) {
            System.out.print("\nEnter command: ");
            String cmd = scanner.next().toLowerCase();

            switch (cmd) {
                case "market":
                    updateMarket();
                    snapshot(); // record current state
                    showMarket();
                    break;
                case "buy":
                    buyStock(scanner);
                    snapshot();
                    break;
                case "sell":
                    sellStock(scanner);
                    snapshot();
                    break;
                case "portfolio":
                    showPortfolio();
                    break;
                case "balance":
                    System.out.printf("üí∞ Balance: $%.2f\n", balance);
                    break;
                case "history":
                    showHistory();
                    break;
                case "exit":
                    System.out.println("üëã Exiting... Goodbye!");
                    return;
                default:
                    System.out.println("‚ùì Invalid command.");
            }
        }
    }

    static void initMarket() {
        market.put("AAPL", new Stock("Apple", 150.0));
        market.put("GOOG", new Stock("Google", 2800.0));
        market.put("TSLA", new Stock("Tesla", 720.0));
        market.put("AMZN", new Stock("Amazon", 3400.0));
    }

    static void updateMarket() {
        for (Stock s : market.values()) {
            s.updatePrice();
        }
    }

    static void showMarket() {
        System.out.println("\nüìä Current Market Prices:");
        for (String symbol : market.keySet()) {
            Stock s = market.get(symbol);
            System.out.printf("%s (%s): $%.2f\n", s.name, symbol, s.price);
        }
    }

    static void buyStock(Scanner scanner) {
        System.out.print("Enter stock symbol to buy: ");
        String symbol = scanner.next().toUpperCase();

        if (!market.containsKey(symbol)) {
            System.out.println("‚ö†Ô∏è Stock not found.");
            return;
        }

        System.out.print("Enter quantity: ");
        int qty = scanner.nextInt();

        double cost = market.get(symbol).price * qty;
        if (cost > balance) {
            System.out.println("‚ùå Insufficient balance.");
        } else {
            balance -= cost;
            portfolio.put(symbol, portfolio.getOrDefault(symbol, 0) + qty);
            System.out.printf("‚úÖ Bought %d shares of %s for $%.2f\n", qty, symbol, cost);
        }
    }

    static void sellStock(Scanner scanner) {
        System.out.print("Enter stock symbol to sell: ");
        String symbol = scanner.next().toUpperCase();

        if (!portfolio.containsKey(symbol)) {
            System.out.println("‚ö†Ô∏è You don‚Äôt own this stock.");
            return;
        }

        System.out.print("Enter quantity: ");
        int qty = scanner.nextInt();
        int owned = portfolio.get(symbol);

        if (qty > owned) {
            System.out.println("‚ùå Not enough shares.");
        } else {
            double revenue = market.get(symbol).price * qty;
            balance += revenue;

            if (qty == owned) {
                portfolio.remove(symbol);
            } else {
                portfolio.put(symbol, owned - qty);
            }

            System.out.printf("‚úÖ Sold %d shares of %s for $%.2f\n", qty, symbol, revenue);
        }
    }

    static void showPortfolio() {
        System.out.println("\nüìÅ Your Portfolio:");
        if (portfolio.isEmpty()) {
            System.out.println("You don‚Äôt own any stocks.");
        } else {
            double total = 0;
            for (String symbol : portfolio.keySet()) {
                int qty = portfolio.get(symbol);
                double price = market.get(symbol).price;
                double value = qty * price;
                total += value;
                System.out.printf("%s: %d shares @ $%.2f = $%.2f\n", symbol, qty, price, value);
            }
            System.out.printf("Total Value (stocks only): $%.2f\n", total);
            System.out.printf("Net Worth (with balance): $%.2f\n", total + balance);
        }
    }

    static void snapshot() {
        double totalValue = balance;
        for (String symbol : portfolio.keySet()) {
            int qty = portfolio.get(symbol);
            double price = market.get(symbol).price;
            totalValue += qty * price;
        }

        String time = new Date().toString();
        history.add(new PortfolioSnapshot(time, totalValue));
    }

    static void showHistory() {
        System.out.println("\nüìú Portfolio Performance History:");
        if (history.isEmpty()) {
            System.out.println("No history yet. Use 'market' or trade to generate snapshots.");
            return;
        }
        for (PortfolioSnapshot snap : history) {
            System.out.printf("[%s] ‚Üí Net Worth: $%.2f\n", snap.time, snap.totalValue);
        }
    }
}
